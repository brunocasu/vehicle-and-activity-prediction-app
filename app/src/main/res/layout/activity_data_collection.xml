<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".DataCollectionActivity">


    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:text="Chronometer"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/removeFiles"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:onClick="onClick"
            android:text="Remove" />

        <Button
            android:id="@+id/recordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="onClick"
            android:text="Record" />
    </LinearLayout>

    <TextView
        android:id="@+id/infoMessageTV"
        android:layout_width="221dp"
        android:layout_height="71dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/overlappingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overlap    =    0" />

        <SeekBar
            android:id="@+id/overlappingBar"
            android:layout_width="211dp"
            android:layout_height="21dp"
            android:layout_marginTop="25dp"
            android:max="75"
            android:progress="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/bikeButton"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:onClick="onClick"
            android:text="Bike"
            android:textSize="12sp" />

        <Button
            android:id="@+id/scooterButton"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:width="115dp"
            android:onClick="onClick"
            android:text="Scooter"
            android:textSize="12sp" />

        <Button
            android:id="@+id/walkButton"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:width="115dp"
            android:onClick="onClick"
            android:text="Walk"
            android:textSize="12sp" />

        <Button
            android:id="@+id/runButton"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:text="Run" />

        <Button
            android:id="@+id/busButton"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:text="Bus" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>